<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="../CSS/Styles.css">
    <title>Личный кабинет</title>
</head>
<body>
    <!--Навигационная панель-->
    <%- include('../partials/navigation.ejs', { email }); %>

    <!--Личная информация (смена пароля)-->
    <div class="example">
        <div class="header-h1">
            <h1>Личный кабинет</h1>
        </div>
        <div class="col-md">
            <div class="form">
                <div class="form-group">
                    <label for="Email">Электронная почта</label>
                    <input type="email" class="form-control" id="Email" placeholder="E-mail" value=<%= typeof email != 'undefined' ? email : '' %>>
                </div>
            </div>
            <div class="form-group">
                <label for="Name">Введите имя</label>
                <input type="text" class="form-control" name="name" id="Name" placeholder="Имя" value=<%= typeof name != 'undefined' ? name : '' %>>
            </div>
            <div class="form-group">
                <label for="OldPassword" id="LabelPassword">Введите старый пароль</label>
                <input type="password" class="form-control" id="Password" placeholder="Пароль">
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="Check1">
                <label class="form-check-label" for="Check1">
                  Не менять пароль
                </label>
              </div>
            <div class="form-group SPassword">
                <label for="NewPassword">Введите новый пароль</label>
                <input type="password" class="form-control" id="NewPassword" placeholder="Пароль">
            </div>
            <div class="form-group SPassword">
                <label for="NewPassword2">Повторите введенный новый пароль</label>
                <input type="password" class="form-control" id="NewPassword2" placeholder="Пароль">
            </div>
            <button type="submit" class="btn btn-primary" id="Update">Изменить</button>
        </div>
    </div>

    <!--Форма поиска (добавления) записей-->
    <div class="example">
        <div class="header-h1">
            <h1>Редактор новостей</h1>
        </div>
        <div>
            <div class="form-group col-md">
                <input type="text" class="form-control" id="Text" placeholder="Введите текст">
            </div>
            <button type="submit" class="btn btn-primary btn-plus" id="Search">Найти</button>
            <button type="submit" class="btn btn-primary btn-plus" id="Add">Добавить запись</button>
        </div>
    </div>

    <!--Результаты поиска-->
    <div class="blog-page">
        <div class="Result col-md"></div>
        <div class="AddRecord col-md"></div>
    </div>

    <!--scripts-->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-Piv4xVNRyMGpqkS2by6br4gNJ7DXjqk09RmUpJ8jgGtD7zP9yug3goQfGII0yAns" crossorigin="anonymous"></script>
    <script src="../JS/Editor.js"></script>
    <script src="../JS/nav.js"></script>
    <script src="../JS/RegAndAuth.js"></script>
</body>
</html>